            <li class="active"><a href="#">Start</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <!-- Content -->
    <div class="container">

			<div class="page-header text-center">
				<h1><%= user.local.username %></h1>
				<a href="/logout" class="btn btn-default btn-sm">Logout</a>
				<input name="deposit" id="deposit" value="Deposit 1XPL" type="submit" />
			</div>

		<div class="well">
			<h3><span class="fa fa-user"></span> Local</h3>

			<% if (user.minecraft.username) { %>
				<p>
					<strong>username</strong>: <%= user.minecraft.username %><br>
				</p>

				<a href="/unlink" class="btn btn-default">Unlink Minecraft</a>
			<% } else { %>
				<a href="/link" class="btn btn-default">Connect Minecraft</a>
			<% } %>

		</div>

    <footer class="footer">

    </footer>


    <!-- JavaScript
    ================================================== -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
		<script>
        $('#deposit').click(function(){
            $.post('/deposit')
        });
    </script>
